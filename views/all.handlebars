<h1>All Tasks</h1>
<ul>
  {{#each tasks}}
    <li>
      <a href="/task/{{this.id}}">{{this.title}}</a>
      <button onclick="deleteTask({{this.id}})">Delete</button>
    </li>
  {{/each}}
</ul>

<script>
  function deleteTask(id) {
    fetch(`/api/tasks/${id}`, {
      method: 'DELETE',
    })
    .then(response => response.json())
    .then(() => location.reload());
  }
</script>
