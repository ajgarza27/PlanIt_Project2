<h1>{{#if this.id}}Edit Task{{else}}Add Task{{/if}}</h1>
<form action="/api/tasks{{#if this.id}}/{{this.id}}{{/if}}" method="POST">
  {{#if this.id}}<input type="hidden" name="_method" value="PUT">{{/if}}
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="{{title}}" required>
  <label for="description">Description:</label>
  <textarea id="description" name="description">{{description}}</textarea>
  <label for="dueDate">Due Date:</label>
  <input type="date" id="dueDate" name="dueDate" value="{{dueDate}}">
  <label for="completed">Completed:</label>
  <input type="checkbox" id="completed" name="completed" {{#if completed}}checked{{/if}}>
  <button type="submit">Save</button>
</form>
